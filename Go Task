# -------------------------------------

block training
  message instructions1
  message instructions2
  bitmap ready3
  delay 1000
  bitmap ready2
  delay 1000  
  bitmap ready1
  delay 1000
  tasklist
    1 5
    11 5
    111 5
    1111 5
  end
  feedback
    text align left
    text color yellow    
    set &RT mean c3 
    text -200 -100 "Average RT in conditions:"
    text -200  -25 &RT ; postfix " ms"
    text -200  100 "Press space bar to continue"
  end

block realtest
  message instructions3
  bitmap ready3
  delay 1000
  bitmap ready2
  delay 1000  
  bitmap ready1
  delay 1000
  tasklist
    2 5
    22 5
    222 5
    2222 5
  end
  feedback
    text align left
    text color yellow    
    set &RT mean c3
    text -200 -100 "Average RT in conditions:"
    text -200  -25 &RT ; postfix " ms"
    text -200  100 "Well done, you have completed the task"
  end
